[user]
    name = Steven Dwy
    email = yoplitein+git@gmail.com

[push]
    default = current

[color]
    ui = true

[alias]
    ls = status
    co = checkout
    cm = commit
    ada = add . --all
    graph = log --graph --decorate --all
    fixup = commit --amend --no-edit
    oops = reset HEAD^1
    branches = branch -avv
    tags = tag -l --format '%(objectname) %(refname)'
    remotes = !git remote | xargs git remote show
    diffc = diff --cached

[include]
    path = ~/.gitconfig-site
